generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscription {
  id    Int    @id @default(autoincrement())
  email String @unique
  user  User?
}

model User {
  id           Int          @id @default(autoincrement())
  name         String
  mobileNumber String?
  age          Int?
  gender       String?
  address      String?
  email        String       @unique
  subscription Subscription @relation(fields: [email], references: [email])
}

model Sportevent {
  id       Int       @id @default(autoincrement())
  sport    String
  date     DateTime?
  time     String
  gender   String
  category String
  price    String
  address  String
  phone    String
  url      String
  age9_12  Boolean?
  age12_15 Boolean?
  age15_18 Boolean?
  age18_30 Boolean?
  age30_   Boolean?
  locationUrl String?
}